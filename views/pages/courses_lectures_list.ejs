<% if(course !== undefined){ %>
<h2 class="text text-center">Курс "<%= course.name %>"</h2>
<p>
    <%= course.description %>
</p>
<% if(course.lectures !== undefined && course.lectures.length >0 ){ %>
<h4>Лекции курса</h4>
<ul class="list-group">
    <% course.lectures.forEach(function(item){%>
   
    <li  class="list-group-item"><a href="/lectures/<%= item.title %>"> <%= item.title %></a> <span class="badge"> <%= item.slides.length %> слайд(ов) </span></li>
   
    <% });%>
</ul>  
<% }else{%>
<p>Лекции по данному курсу скоро будут добавлены</p>
<% }%>
<% }%>